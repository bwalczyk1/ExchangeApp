<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.charts.ChartsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="4">
        <Spinner
            android:id="@+id/base_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Spinner
            android:id="@+id/currency_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_1w"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:text="1W"/>
        <Button
            android:id="@+id/btn_2w"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:text="2W"/>
        <Button
            android:id="@+id/btn_1m"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:text="1M"/>
        <Button
            android:id="@+id/btn_3m"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:text="3M"/>
        <Button
            android:id="@+id/btn_6m"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:text="6M"/>
        <Button
            android:id="@+id/btn_1y"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:text="1Y"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.2"
        android:gravity="center">
        <TextView
            android:text="line chart"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:paddingVertical="7dp"/>
        <Switch
            android:id="@+id/chart_type_switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:text="column chart"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:paddingVertical="7dp"/>
    </LinearLayout>
        <com.anychart.AnyChartView
            android:id="@+id/line_chart_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.8"/>
</LinearLayout>